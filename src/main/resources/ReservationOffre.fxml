<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.paint.*?>

<StackPane xmlns="http://javafx.com/javafx/8.0"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.ReservationOffersController"
           stylesheets="@StyleReser.css">

    <!-- Background Image -->
    <ImageView fitWidth="1200" fitHeight="800" preserveRatio="true">
        <Image url="background.jpg" />
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.8);">
        <!-- Top Navbar -->
        <HBox styleClass="navbar">
            <Button text="Home" styleClass="nav-button" onAction="#goToHome" />
            <Button text="Reservation List" styleClass="nav-button" onAction="#goToReservationList" />
            <Button text="Profile" styleClass="nav-button" onAction="#goToProfile" />
        </HBox>

        <!-- Title -->
        <Label text="Explore Our Travel Offers" styleClass="title-label" />

        <!-- Offers Container -->
        <FlowPane fx:id="offersContainer" hgap="20" vgap="20" alignment="CENTER"
                  prefWrapLength="800" style="-fx-padding: 20;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </FlowPane>
    </VBox>
</StackPane>