<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="588.0" prefWidth="766.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pidev.controllers.DetailHebergCController">

    <children>
        <!-- Header -->
        <Label layoutX="275.0" layoutY="14.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Détails de l'Hébergement" AnchorPane.leftAnchor="275.0" AnchorPane.topAnchor="14.0" />

        <!-- Image -->
        <ImageView fx:id="imageHeberg" fitHeight="200" fitWidth="775.0" layoutY="44.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="44.0" />

        <!-- Nom de l'hébergement -->
        <Label style="-fx-font-weight: bold;" text="Nom :" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="260" />
        <Label fx:id="nomHebergLabel" AnchorPane.leftAnchor="80" AnchorPane.topAnchor="260" />

        <!-- Description -->
        <Label style="-fx-font-weight: bold;" text="Description :" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="290" />
        <Label fx:id="descrpLabel" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="290" />

        <!-- Adresse -->
        <Label style="-fx-font-weight: bold;" text="Adresse :" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="320" />
        <Label fx:id="adresseHebergLabel" AnchorPane.leftAnchor="80" AnchorPane.topAnchor="320" />

        <!-- Type d'hébergement -->
        <Label style="-fx-font-weight: bold;" text="Type :" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="350" />
        <Label fx:id="typeHebergLabel" AnchorPane.leftAnchor="80" AnchorPane.topAnchor="350" />

        <!-- Nombre de clients -->
        <Label style="-fx-font-weight: bold;" text="Nb. Clients :" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="380" />
        <Label fx:id="nbrCLabel" AnchorPane.leftAnchor="100" AnchorPane.topAnchor="380" />

        <!-- Prix -->
        <Label style="-fx-font-weight: bold;" text="Prix :" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="410" />
        <Label fx:id="prixLabel" AnchorPane.leftAnchor="80" AnchorPane.topAnchor="410" />

        <!-- Date Check-In -->
        <Label style="-fx-font-weight: bold;" text="Date Check-In :" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="440" />
        <Label fx:id="dateICLabel" AnchorPane.leftAnchor="120" AnchorPane.topAnchor="440" />

        <!-- Date Check-Out -->
        <Label style="-fx-font-weight: bold;" text="Date Check-Out :" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="470" />
        <Label fx:id="dateOCLabel" AnchorPane.leftAnchor="120" AnchorPane.topAnchor="470" />

        <!-- Retour Button -->
        <Button fx:id="btnBack" layoutX="-3.0" layoutY="-3.0" onAction="#goBack" prefHeight="34.0" prefWidth="61.0" style="-fx-background-color: #FA7335;" text="Retour" textFill="WHITE" AnchorPane.bottomAnchor="556.6" AnchorPane.leftAnchor="-3.0" />

        <!-- Réservation Button -->
        <Button fx:id="btnReservation" layoutX="328.0" layoutY="516.0" onAction="#openReservationPage" prefHeight="34.0" prefWidth="120.0" style="-fx-background-color: #FA7335;" text="Réserver" textFill="WHITE" AnchorPane.bottomAnchor="40.799999999999955" AnchorPane.leftAnchor="328.0" />
      <Button fx:id="btnAddRating" layoutX="469.0" layoutY="516.0" onAction="#openRatingDialog" prefHeight="34.0" prefWidth="120.0" style="-fx-background-color: #FFD700;" text="Add Rating" textAlignment="CENTER" />
      <ListView fx:id="avisListView" layoutX="419.0" layoutY="260.0" prefHeight="240.0" prefWidth="348.0" />
      <Label fx:id="status" layoutX="10.0" layoutY="500.0" style="-fx-font-weight: bold;" text="Status:" />
    </children>
</AnchorPane>
