<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20px; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 10px;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="Controller.updateprog">

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Modifier le Programme de Fidélité" textFill="#012e41" />

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Nom du Programme" textFill="#012e41" />
        <TextField fx:id="nomProgrammeField" style="-fx-pref-width: 250px; -fx-font-size: 14px;" />
    </VBox>

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Points" textFill="#065271" />
        <TextField fx:id="pointsField" style="-fx-pref-width: 250px; -fx-font-size: 14px;" />
    </VBox>


    <HBox spacing="15">
        <Button onAction="#handleCancel" style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-padding: 10px 20px;" text="Annuler" />
        <Button onAction="#handleUpdate" style="-fx-background-color: #26A59E; -fx-text-fill: white; -fx-padding: 10px 20px;" text="Mettre à Jour" />
    </HBox>

</VBox>


