<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.PaymentDialogController" stylesheets="@pay.css">
    <!-- Title -->
    <Label text="Enter Payment Details" styleClass="title"/>

    <!-- Payment Form -->
    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <!-- Card Number -->
        <Label text="Card Number:" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtCardNumber" promptText="4242 4242 4242 4242" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Expiration Date -->
        <Label text="Expiration Date:" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtExpirationDate" promptText="MM/YY" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- CVC -->
        <Label text="CVC:" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtCVC" promptText="123" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <!-- Pay Now Button -->
    <Button text="Pay Now" onAction="#handlePayment" styleClass="button"/>
</VBox>