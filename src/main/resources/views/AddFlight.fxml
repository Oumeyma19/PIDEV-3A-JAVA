<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.AddFlightController"
      stylesheets="/views/AddFlight.css">

    <Label text="Ajouter un nouveau vol" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Departure Airport -->
    <Label text="Aéroport de départ :"/>
    <ComboBox fx:id="departureComboBox"/>

    <!-- Arrival Airport -->
    <Label text="Aéroport d'arrivée :"/>
    <ComboBox fx:id="arrivalComboBox"/>

    <!-- Departure Location TextField -->
    <Label text="Lieu de départ :"/>
    <TextField fx:id="departureField" promptText="Enter departure location"/>

    <!-- Arrival Location TextField -->
    <Label text="Lieu d'arrivée :"/>
    <TextField fx:id="destinationField" promptText="Enter arrival location"/>

    <!-- Departure Date and Time -->
    <Label text="Date et heure de départ :"/>
    <HBox spacing="5">
        <DatePicker fx:id="departureDatePicker" promptText="Select departure date"/>
        <ComboBox fx:id="departureHourComboBox" prefWidth="80" promptText="Hour"/>
        <Label text=":" />
        <ComboBox fx:id="departureMinuteComboBox" prefWidth="80" promptText="Minute"/>
    </HBox>

    <!-- Arrival Date and Time -->
    <Label text="Date et heure d'arrivée :"/>
    <HBox spacing="5">
        <DatePicker fx:id="arrivalDatePicker" promptText="Select arrival date"/>
        <ComboBox fx:id="arrivalHourComboBox" prefWidth="80" promptText="Hour"/>
        <Label text=":" />
        <ComboBox fx:id="arrivalMinuteComboBox" prefWidth="80" promptText="Minute"/>
    </HBox>

    <!-- Price -->
    <TextField fx:id="priceField" promptText="Price"/>

    <!-- Flight Number -->
    <TextField fx:id="flightNumberField" promptText="Flight Number"/>
    <TextField fx:id="numberPlaceField" promptText="Number of Places" />

    <!-- Save and Cancel Buttons -->
    <Button fx:id="saveButton" text="Sauvegarder" onAction="#handleSave"/>
    <Button fx:id="cancelButton" text="Annuler" onAction="#handleCancel"/>
</VBox>
