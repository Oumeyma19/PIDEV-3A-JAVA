<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AirportView" prefWidth="1280.0" prefHeight="700.0">
    <stylesheets>
        <URL value="@flightView.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0">
            <!-- Add Button -->
            <HBox alignment="CENTER">
                <Button onAction="#handleAddAirport" text="Ajouter aéroport" styleClass="action-button" />
            </HBox>

            <!-- TableView -->
            <TableView fx:id="airportTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="400" text="Nom d'aéroport" />
                    <TableColumn fx:id="locationColumn" prefWidth="300" text="Localisation" />
                    <TableColumn fx:id="codeColumn" prefWidth="200" text="Code" />
                    <!-- Actions Column -->
                    <TableColumn fx:id="actionsColumn" prefWidth="300" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
