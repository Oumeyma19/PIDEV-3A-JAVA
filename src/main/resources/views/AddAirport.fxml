<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddAirportController">
    <children>
        <GridPane hgap="10" vgap="10" layoutX="50" layoutY="50">
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <ListView fx:id="suggestionsListView" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="100" prefWidth="200"/>
            <Label text="Location:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="locationField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Code:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="codeField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button fx:id="saveButton" text="Save" onAction="#handleSave" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </children>
</AnchorPane>