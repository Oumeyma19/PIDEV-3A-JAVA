<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateActivityController" spacing="10" style="-fx-padding: 20;">
    <Label text="Update Activity" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Activity Name:"/>
    <TextField fx:id="nameField" promptText="Enter activity name"/>
    <Label text="Start Date:"/>
    <TextField fx:id="startDateField" promptText="YYYY-MM-DD"/>
    <Label text="End Date:"/>
    <TextField fx:id="endDateField" promptText="YYYY-MM-DD"/>
    <Label text="Location:"/>
    <TextField fx:id="locationField" promptText="Enter location"/>
    <Label text="Photo URL:"/>
    <TextField fx:id="photoField" promptText="Enter photo URL"/>
    <Label text="Description:"/>
    <TextField fx:id="descriptionField" promptText="Enter description"/>
    <Button text="Update Activity" onAction="#handleUpdateActivity" style="-fx-background-color: #3A86FF; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>