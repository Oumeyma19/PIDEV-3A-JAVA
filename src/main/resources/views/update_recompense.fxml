<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20px; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 10px;"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
      fx:controller="Controller.UpdateRecompenseController">

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Modifier la Récompense" textFill="#012e41" />

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Nom" textFill="#012e41" />
        <TextField fx:id="nomField" style="-fx-pref-width: 250px; -fx-font-size: 14px;" />
    </VBox>

    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Points" textFill="#065271" />
        <TextField fx:id="pointsField" style="-fx-pref-width: 250px; -fx-font-size: 14px;" />
    </VBox>

    <!-- Affichage de l'image et bouton pour changer -->
    <VBox alignment="CENTER" spacing="10">
        <ImageView fx:id="imageView" fitWidth="150" fitHeight="150" style="-fx-border-color: black; -fx-border-width: 1px;"/>
        <Button fx:id="changePhotoButton" onAction="#handleChangePhoto" style="-fx-background-color: #FFA500; -fx-text-fill: white;" text="Changer la photo" />
    </VBox>

    <HBox spacing="15">
        <Button onAction="#handleCancel" style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-padding: 10px 20px;" text="Annuler" />
        <Button onAction="#handleUpdate" style="-fx-background-color: #26A59E; -fx-text-fill: white; -fx-padding: 10px 20px;" text="Mettre à Jour" />
    </HBox>

</VBox>
