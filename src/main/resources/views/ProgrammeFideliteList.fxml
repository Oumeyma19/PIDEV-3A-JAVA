<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="664.0" prefWidth="1151.0" stylesheets="@StyleReser.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProgrammeFideliteListController">

    <top>
        <VBox spacing="0">
            <!-- Header Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: linear-gradient(to right, #ed6637, #f89263); -fx-padding: 15 20;">
                <Button onAction="#goBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 22; -fx-cursor: hand;" styleClass="nav-button" text="←" />
                <Label fx:id="titleLabel" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;" text="Programmes de Fidélité">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <Label fx:id="userPointsLabel" style="-fx-text-fill: white; -fx-font-size: 16; -fx-padding: 0 10 0 0;" text="Vos points: 0" />
                </HBox>
            </HBox>

            <!-- Search and Filter Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 12 20; -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0;">
                <TextField fx:id="searchField" promptText="Rechercher un programme" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 8 15;" HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="filterComboBox" promptText="Filtrer" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <StackPane style="-fx-background-color: #f5f5f7;">
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <FlowPane fx:id="programmeContainer" alignment="TOP_CENTER" columnHalignment="CENTER" hgap="20" style="-fx-padding: 20;" vgap="20">
                    <!-- Programme cards will be dynamically added here -->
                </FlowPane>
            </ScrollPane>

            <!-- Empty state message -->
            <VBox fx:id="emptyStateBox" alignment="CENTER" spacing="15" visible="false">
                <Label style="-fx-font-size: 18; -fx-text-fill: #6c757d;" text="Aucun programme disponible" />
                <Label style="-fx-font-size: 14; -fx-text-fill: #adb5bd;" text="Veuillez vérifier ultérieurement" />
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e9ecef; -fx-border-width: 1 0 0 0;">
            <Label style="-fx-text-fill: #6c757d; -fx-font-size: 12;" text="© 2025 Tous droits réservés" />
        </HBox>
    </bottom>

</BorderPane>
