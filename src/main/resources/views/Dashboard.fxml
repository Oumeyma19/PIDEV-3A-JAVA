<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController" prefHeight="750.0" prefWidth="1450.0">

    <!-- TOP BAR -->
    <top>
        <HBox style="-fx-background-color:#333333 ; -fx-padding: 10px;">
            <Button onAction="#handleReturnToHome" style="-fx-background-color: transparent; -fx-cursor: hand;">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@fleche.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Text fx:id="fullnameText" fill="WHITE" layoutX="905.703125" layoutY="21.05078125" strokeType="OUTSIDE" strokeWidth="0.0" text="Bonjour Admin" />
            <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                <Image url="@user.png"/>
            </ImageView>
        </HBox>
    </top>

    <!-- SIDE MENU -->
    <left>
        <VBox style="-fx-background-color: white; -fx-padding: 15px; -fx-spacing: 10px;" prefWidth="200">
            <Button text="Tableau de bord" style="-fx-background-color: transparent; -fx-text-fill: black;">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/views/dashboard.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <VBox fx:id="Communauté" style="-fx-padding: 10px; -fx-background-color: transparent;">
                <!-- HBox pour aligner l'image et les boutons horizontalement -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <!-- ImageView pour l'icône de communauté -->
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/views/community.png" />
                        </image>
                    </ImageView>

                    <!-- Boutons à côté de l'image -->
                    <VBox spacing="5">
                        <Button fx:id="clientsButton" text="Clients" style="-fx-background-color: transparent; -fx-text-fill: black;"/>
                        <Button fx:id="guidesButton" text="Guides" style="-fx-background-color: transparent; -fx-text-fill: black;"/>
                    </VBox>
                </HBox>
            </VBox>
            <Button text="Hébèregements" style="-fx-background-color: transparent; -fx-text-fill: black;">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/views/hebergements.png.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Vols" style="-fx-background-color: transparent; -fx-text-fill: black;">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/views/vols.png.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Tours" style="-fx-background-color: transparent; -fx-text-fill: black;">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/views/tours.png.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Récompenses" style="-fx-background-color: transparent; -fx-text-fill: black;">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/views/recompenses.png.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Offres" style="-fx-background-color: transparent; -fx-text-fill: black;">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/views/offres.png.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <VBox fx:id="offersMenu" visible="false" style="-fx-padding: 10px; -fx-background-color: #34495e;">
                <Button text="Ajouter"  style="-fx-background-color: transparent; -fx-text-fill: black;"/>
                <Button text="Lister"  style="-fx-background-color: transparent; -fx-text-fill: black;"/>
            </VBox>
            <Button text="Profile" style="-fx-background-color: transparent; -fx-text-fill: black;" onMouseClicked="#handleProfileClick">
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/views/user.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button text="Liste des Réservations"  style="-fx-background-color: transparent; -fx-text-fill: black;"/>

            <Pane VBox.vgrow="ALWAYS"/>
            <Button text="Déconnexion" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-text-fill: black; -fx-font-weight: bold;" onMouseClicked="#handleLogout">
                <graphic>
            <ImageView fitHeight="16.0" fitWidth="16.0" layoutX="30.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/views/logout.png" />
                </image>
            </ImageView>
            </graphic>
        </Button>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox fx:id="content" style="-fx-padding: 20px;" spacing="20">
            <Label text="Bienvenue sur le tableau de bord" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        </VBox>
    </center>
</BorderPane>
