<AnchorPane prefHeight="393.0" prefWidth="667.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ListesHebergController">
    <!-- Link to external CSS file -->
    <stylesheets>
        <URL value="@/styles.css" />
    </stylesheets>

    <!-- Wrap the FlowPane in a ScrollPane -->
    <ScrollPane fitToWidth="true" layoutX="15.2" layoutY="63.2" prefHeight="322.0" prefWidth="637.0" styleClass="invisible-scroll" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="63.0">
        <FlowPane fx:id="hebergementsFlowPane" hgap="10" prefHeight="111.0" prefWidth="636.0" vgap="10">
            <!-- Define padding using Insets -->
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </FlowPane>
    </ScrollPane>

    <!-- Back Button -->
    <Button fx:id="btnBack" layoutY="1.0" mnemonicParsing="false" onAction="#goBack" style="-fx-background-color: #FA7335;" text="Retour" textFill="WHITE" />

    <Label fx:id="minPriceLabel" layoutX="70.0" layoutY="45.0" text="Min: 0" />
    <Label fx:id="maxPriceLabel" layoutX="541.0" layoutY="45.0" text="Max: 9999" />
    <!-- RangeSlider for Price Filtering -->
    <RangeSlider fx:id="priceRangeSlider" blockIncrement="1000" highValue="9999" layoutX="119.0" layoutY="7.0" lowValue="1000.0" majorTickUnit="1000" max="9999" min="1000.0" minorTickCount="10" prefHeight="38.0" prefWidth="407.0" showTickLabels="true" showTickMarks="true" />
</AnchorPane>
