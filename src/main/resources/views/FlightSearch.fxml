<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox prefHeight="600.0" prefWidth="906.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FlightSearchController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <spacing>10</spacing>
    <ImageView fx:id="homeImage" fitHeight="24.0" fitWidth="45.0" onMouseClicked="#handleHome" pickOnBounds="true" preserveRatio="true">
        <VBox.margin>
            <Insets top="20.0" left="20.0" />
        </VBox.margin>
        <image>
            <Image url="@fleche.png" />
        </image>
    </ImageView>
    <!-- Title -->
    <Label alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Flight Search">
        <font>
            <Font name="Arial" size="24" />
        </font>
    </Label>

    <!-- Search Form in One Row -->
    <HBox alignment="CENTER" spacing="20">
        <!-- Departure Location -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Departure:" />
            <!--<ComboBox fx:id="departureField" prefWidth="150" promptText="Departure" editable="true"/>-->
            <TextField fx:id="departureField" prefWidth="150" promptText="Departure" />

        </VBox>


        <!-- To this: -->
        <!-- Swap Button with color -->
        <Button fx:id="swapButton" onAction="#handleSwap"
                style="-fx-font-size: 18px;
               -fx-background-color: #4285F4;
               -fx-text-fill: white;
               -fx-padding: 5 10;
               -fx-background-radius: 5;"
                text="â‡†" />

        <!-- Arrival Location -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Arrival:" />
            <!--<ComboBox fx:id="arrivalField" prefWidth="150" promptText="Arrival" editable="true" />-->
            <TextField fx:id="arrivalField" prefWidth="150" promptText="Arrival" />
        </VBox>

        <!-- Departure Date -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Departure Date:" />
            <DatePicker fx:id="departureDatePicker" prefWidth="150" />
        </VBox>

        <!-- Arrival Date -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Arrival Date:" />
            <DatePicker fx:id="arrivalDatePicker" prefWidth="150" />
        </VBox>

        <!-- Search Button -->
        <Button onAction="#handleSearch" style="-fx-background-color: #0066ff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="Search" />
    </HBox>

    <!-- Flight Results -->
    <ScrollPane fitToWidth="true" prefHeight="500" prefWidth="860.0" >
        <VBox fx:id="flightResultsContainer" spacing="10">
            <!-- Flight cards will be dynamically added here -->
        </VBox>
    </ScrollPane>
</VBox>
