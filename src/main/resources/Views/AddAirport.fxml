<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.AddAirportController">

    <Label text="Add New Airport" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Airport Name"/>
    <TextField fx:id="locationField" promptText="Location"/>
    <TextField fx:id="codeField" promptText="Airport Code"/>

    <Button fx:id="saveButton" text="Save" onAction="#handleSave"/>
    <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>


</VBox>
