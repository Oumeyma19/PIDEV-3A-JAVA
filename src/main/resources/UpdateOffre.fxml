<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="530.0" prefWidth="621.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateOffreController">

    <Label style="-fx-font-size: 18px;" text="Modifier l'Offre" />

    <Label text="Nom:" />
    <TextField fx:id="titleField" prefHeight="26.0" prefWidth="510.0" />

    <Label text="Description:" />
   <TextArea fx:id="descriptionField" prefHeight="197.0" prefWidth="622.0" />

    <Label text="Prix:" />
    <TextField fx:id="priceField" />

    <Label text="Date Début:" />
    <DatePicker fx:id="startDatePicker" />

    <Label text="Date Fin:" />
    <DatePicker fx:id="endDatePicker" />

    <!-- ✅ Image Preview -->
    <ImageView fx:id="imageView" fitHeight="100" fitWidth="100" />

    <!-- ✅ Button to Select Image -->
    <Button fx:id="btnChooseImage" onAction="#chooseImage" text="Choisir Image" />

    <Button fx:id="btnUpdate" onAction="#updateOffer" text="Mettre à jour" />
</VBox>
