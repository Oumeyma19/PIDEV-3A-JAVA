<AnchorPane prefHeight="750.0" prefWidth="1450.0" style="-fx-background-color: #f7f9fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MyReservationsHebergController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="1100.0" opacity="0.12" pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <image>
            <Image url="@../logo/page1.jpg" />
         </image>
      </ImageView>
      
      <Rectangle arcHeight="0.0" arcWidth="0.0" height="80.0" width="1100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <fill>
            <LinearGradient endX="1.0" endY="0.0" startX="0.0" startY="0.0">
               <stops>
                  <Stop color="#FA7335" />
                  <Stop color="#FF9D6A" offset="1.0" />
               </stops>
            </LinearGradient>
         </fill>
         <effect>
            <DropShadow color="#00000040" height="10.0" radius="4.5" width="10.0" />
         </effect>
      </Rectangle>
      
      <HBox alignment="CENTER_LEFT" spacing="30.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="15.0">
         <Button fx:id="retourr" mnemonicParsing="false" onAction="#goBack" prefHeight="50.0" prefWidth="80.0"
                 style="-fx-background-color: white; -fx-background-radius: 25; -fx-font-size: 18px; -fx-text-fill: #FA7335; -fx-font-weight: bold;">
            <graphic>
               <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../logo/back_icon.png" />
                  </image>
               </ImageView>
            </graphic>
            <effect>
               <DropShadow color="#00000040" height="5.0" radius="2.0" width="5.0" />
            </effect>
         </Button>
         
         <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="Mes Réservations">
            <effect>
               <DropShadow color="#00000040" height="3.0" radius="1.0" width="3.0" />
            </effect>
         </Label>
      </HBox>
      
      <VBox layoutX="50.0" layoutY="100.0" prefHeight="580.0" prefWidth="1000.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0">
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <ImageView fitHeight="28.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../logo/calendar.png" />
               </image>
            </ImageView>
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Vos réservations d'hébergements" />
         </HBox>
         
         <Rectangle arcHeight="15.0" arcWidth="15.0" fill="white" height="500.0" width="1000.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <effect>
               <DropShadow color="#00000030" height="10.0" radius="4.5" width="10.0" />
            </effect>
         </Rectangle>
         
         <ScrollPane fitToWidth="true" layoutX="0.0" layoutY="50.0" prefHeight="500.0" prefWidth="1000.0"
                   style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <content>
               <FlowPane fx:id="reservationsFlowPane" hgap="25" prefWidth="980.0" vgap="25" style="-fx-background-color: transparent;">
                  <padding>
                     <Insets bottom="20" left="20" right="20" top="20" />
                  </padding>
               </FlowPane>
            </content>
            <VBox.margin>
               <Insets top="-500.0" />
            </VBox.margin>
         </ScrollPane>
         
         <VBox fx:id="emptyStateContainer" alignment="CENTER" prefHeight="300.0" prefWidth="1000.0" spacing="20.0" visible="false">
            <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../logo/empty_calendar.png" />
               </image>
            </ImageView>
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #6c757d;" text="Aucune réservation pour le moment" />
            <Label style="-fx-font-size: 16px; -fx-text-fill: #adb5bd; -fx-text-alignment: center;" text="Découvrez nos hébergements et réservez votre prochain séjour!" textAlignment="CENTER" wrapText="true" />

            <VBox.margin>
               <Insets top="-450.0" />
            </VBox.margin>
         </VBox>
      </VBox>
   </children>
</AnchorPane>
