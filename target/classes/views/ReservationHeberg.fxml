<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../StyleReser.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ReservationHebergController">

    <!-- Background Image -->
    <ImageView fitHeight="800" fitWidth="1200" preserveRatio="true">
        <Image url="@../logo/page1.jpg" />
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 20;">

        <!-- Top Navbar -->
        <HBox styleClass="navbar">
            <Button styleClass="nav-button" text="Home" />
            <Button fx:id="navlistes" onAction="#afficherListeHebergements" styleClass="nav-button" text="Listes des Hebergements" />
            <Button onAction="#goToMyReservations" styleClass="nav-button" text="Mes RÃ©servations" />
        </HBox>

        <!-- Title -->
        <Label styleClass="title-label" text="Explorer Nos Hebergements" />

        <!-- Scrollable Offers Container -->
        <ScrollPane fitToHeight="false" fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <FlowPane fx:id="offersContainer" alignment="CENTER" hgap="20" prefHeight="53.0" prefWidth="1155.0" prefWrapLength="800" style="-fx-padding: 20;" vgap="20">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
            </FlowPane>
        </ScrollPane>

    </VBox>
</StackPane>
