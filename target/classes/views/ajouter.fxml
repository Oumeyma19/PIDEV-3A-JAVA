<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AjouterOffre">

   <children>
      <Label layoutX="50" layoutY="50" text="Offre Name" />
      <TextField fx:id="offreNameField" layoutX="150" layoutY="50" />

      <Label layoutX="50" layoutY="100" text="Description" />
      <TextField fx:id="descriptionField" layoutX="150" layoutY="100" />

      <Label layoutX="50" layoutY="150" text="Prix" />
      <TextField fx:id="prixField" layoutX="150" layoutY="150" />

      <Label layoutX="50" layoutY="200" text="Start Date" />
      <DatePicker fx:id="startDatePicker" layoutX="150" layoutY="200" />

      <Label layoutX="50" layoutY="250" text="End Date" />
      <DatePicker fx:id="endDatePicker" layoutX="150" layoutY="250" />

      <Label layoutX="50" layoutY="300" text="Hebergements" />
      <ComboBox fx:id="hebergementsComboBox" layoutX="150" layoutY="300" prefWidth="200" />

      <Label layoutX="50" layoutY="350" text="Tours" />
      <ComboBox fx:id="toursComboBox" layoutX="150" layoutY="350" prefWidth="200" />

      <Label layoutX="50" layoutY="400" text="Flights" />
      <ComboBox fx:id="flightsComboBox" layoutX="150" layoutY="400" prefWidth="200" />

      <Button fx:id="btnChooseImage" layoutX="400" layoutY="50" text="Choose Image" />
      <ImageView fx:id="imageView" layoutX="400" layoutY="100" fitWidth="150" fitHeight="150" />

      <Button fx:id="ajouterButton" layoutX="250" layoutY="450" text="Ajouter" />
   </children>
</AnchorPane>