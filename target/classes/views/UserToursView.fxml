<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox
        prefHeight="700.0"
        prefWidth="1000.0"
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/23.0.1"
        fx:controller="controllers.UserToursViewController"
        style="-fx-background-color: #F5F7FA;">

    <!-- Header with title and buttons -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #3A86FF; -fx-padding: 15 20;">
        <Button
                fx:id="profileButton"
                text="←"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 30px;">
        </Button>

        <Label
                text="Vos Tours"
                style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 0 20;">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <HBox HBox.hgrow="ALWAYS" />

        <Button
                fx:id="newTourButton"
                text="+ Nouveau Tour"
                style="-fx-background-color: white; -fx-text-fill: #3A86FF; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 15; -fx-background-radius: 20;">
            <effect>
                <DropShadow color="#00000033" radius="5" spread="0.1" />
            </effect>
        </Button>
    </HBox>

    <!-- Tours dashboard section -->
    <StackPane VBox.vgrow="ALWAYS">
        <!-- Main content -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
            <VBox style="-fx-padding: 20;">
                <!-- Filter section -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-spacing: 15;"
                      VBox.vgrow="NEVER">
                    <effect>
                        <DropShadow color="#00000022" radius="10" spread="0.05" />
                    </effect>

                    <Label text="FILTRER LES TOURS" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3A86FF;" />

                    <HBox spacing="20" alignment="CENTER_LEFT">

                        <!-- Price Range Filter -->
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Fourchette de Prix" style="-fx-text-fill: #555555;" />
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <TextField fx:id="minPriceField" promptText="Min €" prefWidth="100" />
                                <Label text="à" />
                                <TextField fx:id="maxPriceField" promptText="Max €" prefWidth="100" />
                            </HBox>
                        </VBox>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="resetFilterButton" text="Réinitialiser les Filtres"
                                style="-fx-background-color: #e0e0e0; -fx-text-fill: #555555; -fx-background-radius: 4;" />
                        <Button fx:id="applyFilterButton" text="Appliquer les Filtres"
                                style="-fx-background-color: #3A86FF; -fx-text-fill: white; -fx-background-radius: 4;" />
                    </HBox>
                </VBox>

                <Separator style="-fx-padding: 10 0;">
                    <VBox.margin>
                        <Insets top="10" bottom="10" />
                    </VBox.margin>
                </Separator>

                <!-- Tour listings section -->
                <Label
                        text="LISTE DES TOURS"
                        style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555; -fx-padding: 0 0 10 0;" />

                <FlowPane
                        fx:id="toursFlowPane"
                        hgap="20"
                        vgap="20" />
            </VBox>
        </ScrollPane>
    </StackPane>
</VBox>