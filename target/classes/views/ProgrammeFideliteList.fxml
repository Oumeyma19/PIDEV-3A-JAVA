<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/8.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ProgrammeFideliteListController"
            stylesheets="@StyleReser.css">

    <top>
        <VBox spacing="0">
            <!-- Header Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: linear-gradient(to right, #ed6637, #f89263); -fx-padding: 15 20;">
                <Button text="←" onAction="#goBack" styleClass="nav-button"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 22; -fx-cursor: hand;"/>
                <Label fx:id="titleLabel" text="Programmes de Fidélité"
                       style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                    <Label fx:id="userPointsLabel" text="Vos points: 0"
                           style="-fx-text-fill: white; -fx-font-size: 16; -fx-padding: 0 10 0 0;"/>
                </HBox>
            </HBox>

            <!-- Search and Filter Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 12 20; -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0;">
                <TextField fx:id="searchField" promptText="Rechercher un programme"
                           style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 8 15;"
                           HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="filterComboBox" promptText="Filtrer"
                          style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <StackPane style="-fx-background-color: #f5f5f7;">
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <FlowPane fx:id="programmeContainer"
                          alignment="TOP_CENTER"
                          hgap="20"
                          vgap="20"
                          columnHalignment="CENTER"
                          style="-fx-padding: 20;">
                    <!-- Programme cards will be dynamically added here -->
                </FlowPane>
            </ScrollPane>

            <!-- Empty state message -->
            <VBox fx:id="emptyStateBox" alignment="CENTER" visible="false" spacing="15">
                <Label text="Aucun programme disponible" style="-fx-font-size: 18; -fx-text-fill: #6c757d;"/>
                <Label text="Veuillez vérifier ultérieurement" style="-fx-font-size: 14; -fx-text-fill: #adb5bd;"/>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e9ecef; -fx-border-width: 1 0 0 0;">
            <Label text="© 2025 Tous droits réservés" style="-fx-text-fill: #6c757d; -fx-font-size: 12;"/>
        </HBox>
    </bottom>

</BorderPane>