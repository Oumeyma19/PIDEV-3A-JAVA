<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="1450.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AvisTourController">
    <children>
        <VBox spacing="30" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Titre "Liste des Avis" -->
                <Text text="Liste Des Avis" style="-fx-translate-x: 20;">
                    <font>
                        <Font name="Impact" size="48.0" />
                    </font>
                </Text>

                <!-- TableView -->
                <TableView fx:id="avisTable" prefHeight="400.0" prefWidth="800.0" styleClass="custom-table">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50" styleClass="table-column" />
                        <TableColumn fx:id="clientIdColumn" text="Client ID" prefWidth="100" styleClass="table-column" />
                        <TableColumn fx:id="etoileColumn" text="Étoiles" prefWidth="100" styleClass="table-column" />
                        <TableColumn fx:id="commentaireColumn" text="Commentaire" prefWidth="500" styleClass="table-column" />
                    </columns>
                </TableView>

                <!-- Input fields for updating an avis -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="updateEtoileField" promptText="Étoiles" styleClass="text-field" />
                    <TextField fx:id="updateCommentaireField" promptText="Commentaire" styleClass="text-field" />
                </HBox>

                <!-- Buttons for Update, Delete, and Go Back -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="updateButton" text="Update" styleClass="update-button" onAction="#handleUpdateAvis" />
                    <Button fx:id="deleteButton" text="Delete" styleClass="delete-button" onAction="#handleDeleteAvis" />
                    <Button fx:id="goBackButton" text="Go Back" styleClass="orange-button" onAction="#handleGoBack" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>