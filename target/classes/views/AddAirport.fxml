<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane stylesheets="/views/AddAirport.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddAirportController" prefHeight="400.0" prefWidth="600.0">
    <children>
        <GridPane hgap="10" layoutX="50" layoutY="50" prefHeight="350.0" prefWidth="500.0" vgap="10">
            <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200.0" />
            <ListView fx:id="suggestionsListView" prefHeight="150.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Localisation :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200.0" />
            <Label text="Code :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200.0" />
            <Button fx:id="saveButton" onAction="#handleSave" text="Sauvegarder" GridPane.columnIndex="0" GridPane.rowIndex="4" prefWidth="100.0" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Annuler" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="100.0" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
