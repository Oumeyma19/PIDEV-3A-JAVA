<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.TourActivitiesViewController"
      style="-fx-background-color: #f5f7fa;">

    <!-- Header with Title and Add Button -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #3498db; -fx-padding: 15 20;">
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.3" />
                </color>
            </DropShadow>
        </effect>

        <Label fx:id="tourTitleLabel" text="Tour Activities" textFill="WHITE">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

        <Button text="+ Add Activity" onAction="#handleAddActivity"
                style="-fx-background-color: white; -fx-text-fill: #3498db;
                       -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 30;">
            <font>
                <Font size="14.0" />
            </font>
            <effect>
                <DropShadow height="4.0" radius="1.5" width="4.0">
                    <color>
                        <Color opacity="0.2" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
    </HBox>

    <!-- Content area with activities -->
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-padding: 0;"
                VBox.vgrow="ALWAYS" pannable="true">
        <padding>
            <Insets top="0" right="0" bottom="0" left="0" />
        </padding>

        <FlowPane fx:id="activitiesFlowPane" hgap="20" vgap="20"
                  style="-fx-padding: 20; -fx-background-color: transparent;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </FlowPane>
    </ScrollPane>

    <!-- Footer with info or stats could be added here -->
    <HBox style="-fx-background-color: #3498db; -fx-padding: 10 20;" alignment="CENTER_RIGHT">
        <Label text="Â© 2025 Tour Management System" textFill="white">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </HBox>
</VBox>