<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>

<AnchorPane fx:controller="Controller.AjouterRecompenseController"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="400" prefHeight="300">

    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="30">
        <Label text="Ajouter une Récompense" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">

            <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Points Requis:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="pointsField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Add the upload button for selecting a photo -->
            <Button fx:id="uploadButton" text="Télécharger une image" onAction="#handleUploadPhoto" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- ImageView to display the selected image -->
            <ImageView fx:id="imageView" fitWidth="100" fitHeight="100" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Ajouter" onAction="#handleAddRecompense" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px;"/>
    </VBox>
</AnchorPane>
